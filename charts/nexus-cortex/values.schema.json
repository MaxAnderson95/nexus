{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "NEXUS Station Cortex Chart Values",
  "description": "Schema for validating NEXUS Cortex (BFF) Helm chart values",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "nameOverride": {
      "type": "string",
      "description": "Override the name of the chart"
    },
    "fullnameOverride": {
      "type": "string",
      "description": "Override the full name of the release"
    },
    "imagePullSecrets": {
      "type": "array",
      "description": "Image pull secrets",
      "items": { "type": "string" }
    },
    "managedBy": {
      "type": "string",
      "description": "Value for the app.kubernetes.io/managed-by label",
      "default": "Helm"
    },
    "enableJSONLogging": {
      "type": "boolean",
      "description": "Enable JSON structured logging",
      "default": false
    },
    "global": {
      "type": "object",
      "description": "Cross-namespace configuration",
      "additionalProperties": false,
      "properties": {
        "namespaces": {
          "type": "object",
          "properties": {
            "infra": { "type": "string", "default": "nexus-infra" },
            "power": { "type": "string", "default": "nexus-power" },
            "lifeSupport": { "type": "string", "default": "nexus-life-support" },
            "crew": { "type": "string", "default": "nexus-crew" },
            "docking": { "type": "string", "default": "nexus-docking" },
            "inventory": { "type": "string", "default": "nexus-inventory" }
          }
        },
        "services": {
          "type": "object",
          "properties": {
            "postgres": { "type": "string", "default": "postgres" },
            "redis": { "type": "string", "default": "redis" },
            "power": { "type": "string", "default": "power" },
            "lifeSupport": { "type": "string", "default": "life-support" },
            "crew": { "type": "string", "default": "crew" },
            "docking": { "type": "string", "default": "docking" },
            "inventory": { "type": "string", "default": "inventory" }
          }
        },
        "ports": {
          "type": "object",
          "properties": {
            "postgres": { "type": "integer", "default": 5432 },
            "redis": { "type": "integer", "default": 6379 },
            "services": { "type": "integer", "default": 80 }
          }
        }
      }
    },
    "database": {
      "type": "object",
      "description": "Database configuration",
      "additionalProperties": false,
      "properties": {
        "name": { "type": "string", "default": "nexus" },
        "username": { "type": "string", "default": "nexus" },
        "password": { "type": "string" }
      }
    },
    "otel": {
      "type": "object",
      "description": "OpenTelemetry configuration",
      "additionalProperties": false,
      "properties": {
        "enabled": { "type": "boolean", "default": false },
        "sdkDisabled": { "type": "boolean", "default": false },
        "endpoint": { "type": "string" },
        "protocol": { "type": "string", "enum": ["grpc", "http/protobuf"] },
        "insecure": { "type": "boolean", "default": true }
      }
    },
    "chaos": {
      "type": "object",
      "description": "Chaos engineering configuration",
      "additionalProperties": false,
      "properties": {
        "level": {
          "type": "string",
          "enum": ["none", "low", "medium", "high"],
          "default": "none"
        }
      }
    },
    "replicaCount": {
      "type": "integer",
      "minimum": 0,
      "default": 1
    },
    "revisionHistoryLimit": {
      "type": "integer",
      "minimum": 0,
      "default": 3
    },
    "strategy": {
      "$ref": "#/$defs/deploymentStrategy"
    },
    "image": {
      "$ref": "#/$defs/imageConfig"
    },
    "podAnnotations": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    },
    "podLabels": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    },
    "service": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "enum": ["ClusterIP", "NodePort", "LoadBalancer"],
          "default": "ClusterIP"
        },
        "port": { "type": "integer", "default": 80 },
        "containerPort": { "type": "integer", "default": 8080 }
      }
    },
    "resources": {
      "$ref": "#/$defs/resources"
    },
    "livenessProbe": {
      "$ref": "#/$defs/httpProbe"
    },
    "readinessProbe": {
      "$ref": "#/$defs/httpProbe"
    },
    "env": {
      "type": "array",
      "items": { "$ref": "#/$defs/envVar" }
    },
    "dash0Monitoring": {
      "type": "object",
      "description": "Dash0 Monitoring custom resource configuration",
      "additionalProperties": true,
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable Dash0 Monitoring resource",
          "default": false
        },
        "spec": {
          "type": "object",
          "description": "Dash0Monitoring spec (validated by operator)",
          "additionalProperties": true
        }
      }
    },
    "dash0Frontend": {
      "type": "object",
      "description": "Dash0 Website Monitoring (frontend RUM) configuration",
      "additionalProperties": false,
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable Dash0 frontend website monitoring",
          "default": false
        },
        "endpoint": {
          "type": "string",
          "description": "Dash0 OTLP HTTP endpoint URL",
          "default": "https://ingress.us-east-1.aws.dash0.com"
        },
        "environment": {
          "type": "string",
          "description": "Deployment environment name (e.g., production, staging)",
          "default": "production"
        },
        "authToken": {
          "type": "string",
          "description": "Dash0 auth token with Ingesting permissions (use authTokenSecret for production)"
        },
        "authTokenSecret": {
          "type": "object",
          "description": "Reference to Kubernetes secret containing the auth token",
          "additionalProperties": false,
          "properties": {
            "name": {
              "type": "string",
              "description": "Name of the Kubernetes secret"
            },
            "key": {
              "type": "string",
              "description": "Key within the secret containing the auth token"
            }
          },
          "required": ["name", "key"]
        }
      }
    },
    "nexus-common": {
      "type": "object",
      "description": "Library chart dependency values (managed by Helm)"
    },
    "extraResources": {
      "type": "array",
      "description": "Additional Kubernetes resources to deploy alongside this chart",
      "items": { "$ref": "#/$defs/kubernetesResource" },
      "default": []
    }
  },
  "$defs": {
    "kubernetesResource": {
      "type": "object",
      "description": "A Kubernetes resource manifest",
      "properties": {
        "apiVersion": {
          "type": "string",
          "description": "Kubernetes API version for the resource"
        },
        "kind": {
          "type": "string",
          "description": "Kubernetes resource kind"
        },
        "metadata": {
          "type": "object",
          "description": "Resource metadata",
          "properties": {
            "name": { "type": "string" },
            "namespace": { "type": "string" },
            "labels": {
              "type": "object",
              "additionalProperties": { "type": "string" }
            },
            "annotations": {
              "type": "object",
              "additionalProperties": { "type": "string" }
            }
          },
          "additionalProperties": true
        },
        "spec": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "required": ["apiVersion", "kind"],
      "additionalProperties": true
    },
    "imageConfig": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "registry": { "type": "string" },
        "repository": { "type": "string" },
        "pullPolicy": {
          "type": "string",
          "enum": ["Always", "IfNotPresent", "Never"],
          "default": "Always"
        },
        "tag": { "type": "string" }
      }
    },
    "deploymentStrategy": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "enum": ["RollingUpdate", "Recreate"],
          "default": "RollingUpdate"
        },
        "rollingUpdate": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "maxUnavailable": {
              "oneOf": [
                { "type": "integer", "minimum": 0 },
                { "type": "string", "pattern": "^[0-9]+%$" }
              ]
            },
            "maxSurge": {
              "oneOf": [
                { "type": "integer", "minimum": 0 },
                { "type": "string", "pattern": "^[0-9]+%$" }
              ]
            }
          }
        }
      }
    },
    "resources": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "requests": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "cpu": { "type": "string", "pattern": "^[0-9]+m?$" },
            "memory": { "type": "string", "pattern": "^[0-9]+(Ki|Mi|Gi)?$" }
          }
        },
        "limits": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "cpu": { "type": "string", "pattern": "^[0-9]+m?$" },
            "memory": { "type": "string", "pattern": "^[0-9]+(Ki|Mi|Gi)?$" }
          }
        }
      }
    },
    "httpProbe": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "httpGet": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "path": { "type": "string" },
            "port": { "oneOf": [{ "type": "integer" }, { "type": "string" }] },
            "scheme": { "type": "string", "enum": ["HTTP", "HTTPS"] }
          }
        },
        "initialDelaySeconds": { "type": "integer", "minimum": 0 },
        "periodSeconds": { "type": "integer", "minimum": 1 },
        "timeoutSeconds": { "type": "integer", "minimum": 1 },
        "successThreshold": { "type": "integer", "minimum": 1 },
        "failureThreshold": { "type": "integer", "minimum": 1 }
      }
    },
    "envVar": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name"],
      "properties": {
        "name": { "type": "string" },
        "value": { "type": "string" },
        "valueFrom": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "secretKeyRef": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "key": { "type": "string" }
              }
            },
            "configMapKeyRef": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "key": { "type": "string" }
              }
            },
            "fieldRef": {
              "type": "object",
              "properties": {
                "fieldPath": { "type": "string" }
              }
            }
          }
        }
      }
    }
  }
}
