{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "NEXUS Station Load Generator Chart Values",
  "description": "Schema for validating NEXUS Load Generator Helm chart values",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "nameOverride": {
      "type": "string",
      "description": "Override the name of the chart"
    },
    "fullnameOverride": {
      "type": "string",
      "description": "Override the full name of the release"
    },
    "imagePullSecrets": {
      "type": "array",
      "description": "Image pull secrets",
      "items": { "type": "string" }
    },
    "managedBy": {
      "type": "string",
      "description": "Value for the app.kubernetes.io/managed-by label",
      "default": "Helm"
    },
    "global": {
      "type": "object",
      "description": "Cross-namespace configuration",
      "additionalProperties": false,
      "properties": {
        "namespaces": {
          "type": "object",
          "properties": {
            "cortex": { "type": "string", "default": "nexus-cortex" }
          }
        },
        "services": {
          "type": "object",
          "properties": {
            "cortex": { "type": "string", "default": "cortex" }
          }
        },
        "ports": {
          "type": "object",
          "properties": {
            "services": { "type": "integer", "default": 80 }
          }
        }
      }
    },
    "otel": {
      "type": "object",
      "description": "OpenTelemetry configuration",
      "additionalProperties": false,
      "properties": {
        "enabled": { "type": "boolean", "default": false },
        "sdkDisabled": { "type": "boolean", "default": false },
        "endpoint": { "type": "string" },
        "protocol": { "type": "string", "enum": ["grpc", "http/protobuf"] },
        "insecure": { "type": "boolean", "default": true }
      }
    },
    "locust": {
      "type": "object",
      "description": "Locust HTTP load generator configuration",
      "additionalProperties": false,
      "properties": {
        "enabled": { "type": "boolean", "default": true },
        "users": { "type": "integer", "minimum": 1, "default": 10 },
        "spawnRate": { "type": "integer", "minimum": 1, "default": 1 }
      }
    },
    "rum": {
      "type": "object",
      "description": "RUM browser-based load generator configuration",
      "additionalProperties": false,
      "properties": {
        "enabled": { "type": "boolean", "default": false },
        "browsers": { "type": "integer", "minimum": 1, "default": 2 },
        "iterations": { "type": "integer", "minimum": 0, "default": 0 },
        "headless": { "type": "boolean", "default": true },
        "timing": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "minThinkTime": { "type": "integer", "default": 500 },
            "maxThinkTime": { "type": "integer", "default": 2000 },
            "minScenarioWait": { "type": "integer", "default": 3000 },
            "maxScenarioWait": { "type": "integer", "default": 8000 }
          }
        },
        "scenarioWeights": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "dashboard": { "type": "integer", "default": 30 },
            "docking": { "type": "integer", "default": 20 },
            "lifeSupport": { "type": "integer", "default": 15 },
            "power": { "type": "integer", "default": 15 },
            "crew": { "type": "integer", "default": 10 },
            "inventory": { "type": "integer", "default": 10 }
          }
        },
        "resources": { "$ref": "#/$defs/resources" },
        "shmSize": { "type": "string", "default": "2Gi" },
        "image": { "$ref": "#/$defs/imageConfig" }
      }
    },
    "image": {
      "$ref": "#/$defs/imageConfig"
    },
    "service": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "enum": ["ClusterIP", "NodePort", "LoadBalancer"],
          "default": "ClusterIP"
        },
        "port": { "type": "integer", "default": 8089 },
        "containerPort": { "type": "integer", "default": 8089 }
      }
    },
    "resources": {
      "$ref": "#/$defs/resources"
    },
    "dash0Monitoring": {
      "type": "object",
      "description": "Dash0 Monitoring custom resource configuration",
      "additionalProperties": true,
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable Dash0 Monitoring resource",
          "default": false
        },
        "spec": {
          "type": "object",
          "description": "Dash0Monitoring spec (validated by operator)",
          "additionalProperties": true
        }
      }
    },
    "nexus-common": {
      "type": "object",
      "description": "Library chart dependency values (managed by Helm)"
    },
    "extraResources": {
      "type": "array",
      "description": "Additional Kubernetes resources to deploy alongside this chart",
      "items": { "$ref": "#/$defs/kubernetesResource" },
      "default": []
    }
  },
  "$defs": {
    "kubernetesResource": {
      "type": "object",
      "description": "A Kubernetes resource manifest",
      "properties": {
        "apiVersion": {
          "type": "string",
          "description": "Kubernetes API version for the resource"
        },
        "kind": {
          "type": "string",
          "description": "Kubernetes resource kind"
        },
        "metadata": {
          "type": "object",
          "description": "Resource metadata",
          "properties": {
            "name": { "type": "string" },
            "namespace": { "type": "string" },
            "labels": {
              "type": "object",
              "additionalProperties": { "type": "string" }
            },
            "annotations": {
              "type": "object",
              "additionalProperties": { "type": "string" }
            }
          },
          "additionalProperties": true
        },
        "spec": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "required": ["apiVersion", "kind"],
      "additionalProperties": true
    },
    "imageConfig": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "registry": { "type": "string" },
        "repository": { "type": "string" },
        "pullPolicy": {
          "type": "string",
          "enum": ["Always", "IfNotPresent", "Never"],
          "default": "Always"
        },
        "tag": { "type": "string" }
      }
    },
    "resources": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "requests": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "cpu": { "type": "string", "pattern": "^[0-9]+m?$" },
            "memory": { "type": "string", "pattern": "^[0-9]+(Ki|Mi|Gi)?$" }
          }
        },
        "limits": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "cpu": { "type": "string", "pattern": "^[0-9]+m?$" },
            "memory": { "type": "string", "pattern": "^[0-9]+(Ki|Mi|Gi)?$" }
          }
        }
      }
    }
  }
}
